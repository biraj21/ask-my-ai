{
  "manifest_version": 3,
  "name": "Ask My AI: Free Sidebar for ChatGPT, Claude, Perplexity",
  "version": "0.0.7",
  "description": "Your AI assistant, always one click away. Highlight text on any page to explain with ChatGPT, Claude, DeepSeek, Perplexity, & more.",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel",
    "declarativeNetRequestWithHostAccess",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://google.com/*",
        "https://*.google.com/*",
        "https://scira.ai/*",
        "https://*.scira.ai/*",
        "https://*.deepseek.com/*",
        "https://*.mistral.ai/*",
        "https://perplexity.ai/*",
        "https://*.perplexity.ai/*",
        "https://grok.com/*",
        "https://*.grok.com/*"
      ],
      "js": ["src/content/iframe-script.ts"],
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/selection-popup.ts"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ask My AI Settings"
  },
  "commands": {
    "open-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Open Ask My AI sidebar"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["public/brands/*.svg", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
