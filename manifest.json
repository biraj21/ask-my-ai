{
  "manifest_version": 3,
  "name": "Ask My AI",
  "version": "0.0.2",
  "description": "Select any text on any webpage and instantly ask your preferred AI to explain it, all within a convenient sidebar.",
  "permissions": ["contextMenus", "storage", "sidePanel", "declarativeNetRequestWithHostAccess"],
  "host_permissions": [
    "https://claude.ai/*",
    "https://*.claude.ai/*",
    "https://chatgpt.com/*",
    "https://*.chatgpt.com/*",
    "https://google.com/",
    "https://*.google.com/",
    "https://scira.ai/",
    "https://*.scira.ai/",
    "https://*.deepseek.com/*",
    "https://*.mistral.ai/*",
    "https://perplexity.ai/*",
    "https://*.perplexity.ai/*"
  ],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "https://chatgpt.com/*",
        "https://*.chatgpt.com/*",
        "https://google.com/*",
        "https://*.google.com/*",
        "https://scira.ai/*",
        "https://*.scira.ai/*",
        "https://*.deepseek.com/*",
        "https://*.mistral.ai/*",
        "https://perplexity.ai/*",
        "https://*.perplexity.ai/*"
      ],
      "js": ["src/content.ts"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ask My AI Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
