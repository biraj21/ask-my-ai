{
  "manifest_version": 3,
  "name": "Ask My AI",
  "version": "0.0.1",
  "description": "Select any text on any webpage and instantly ask your preferred AI to explain it, all within a convenient sidebar.",
  "permissions": ["contextMenus", "storage", "sidePanel", "declarativeNetRequestWithHostAccess"],
  "host_permissions": [
    "*://claude.ai/*",
    "*://*.claude.ai/*",
    "*://chatgpt.com/*",
    "*://*.chatgpt.com/*",
    "*://google.com/",
    "*://*.google.com/",
    "*://scira.ai/",
    "*://*.scira.ai/",
    "*://chat.deepseek.com/*",
    "*://chat.mistral.ai/*"
  ],
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*",
        "*://google.com/*",
        "*://*.google.com/*",
        "*://scira.ai/*",
        "*://*.scira.ai/*",
        "*://chat.deepseek.com/*",
        "*://chat.mistral.ai/*"
      ],
      "js": ["src/content.ts"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ask My AI Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
